<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Softwarica College of IT and E-Commerce"
            android:id="@+id/tvCollegeName"

            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dillibazar,Pipalbot"
            android:id="@+id/tvLocation"

            />

    </LinearLayout>



    <ImageView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/softwarica"
        android:id="@+id/collegeImage"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bachleor of IT and Ethical Hacking"
            android:layout_weight="1"
            android:textSize="20dp"
            android:fontFamily="casual"
            android:id="@+id/tvCourse"/>


        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$12"
            android:id="@+id/tvPrice"/>

    </LinearLayout>



</LinearLayout>

